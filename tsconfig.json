{
  "compilerOptions": {
    "target": "es2015",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "outDir": "ts-built",
    "rootDir": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "sourceMap": true,
//    "strictNullChecks": true,
//    "strictPropertyInitialization": true,
  },
  "include": [
    "src"
  ],

  "exclude": [
    "node_modules"
  ]
}
